<themeCapabilities>

	<themeName>Carbon</themeName>

	<colorScheme name="red">
        <label>Red</label>
    </colorScheme>

	<colorScheme name="blue">
        <label>Blue</label>
    </colorScheme>

	<colorScheme name="green">
	    <label>Green</label>
	</colorScheme>

	<colorScheme name="yellow">
        <label>Yellow</label>
    </colorScheme>

	<colorScheme name="orange">
        <label>Orange</label>
    </colorScheme>

	<colorScheme name="purple">
        <label>Purple</label>
    </colorScheme>

	<colorScheme name="teal">
        <label>Teal</label>
    </colorScheme>

	<colorScheme name="pink">
        <label>Pink</label>
    </colorScheme>

	<variant name="Video">
		<label>Video</label>
		<selectable>false</selectable>
		<override>
			<trigger>noVideos</trigger>
			<useVariant>Detailed</useVariant>
		</override>
	</variant>

	<variant name="Detailed">
		<label>Detailed</label>
		<selectable>false</selectable>
		<override>
			<trigger>noMedia</trigger>
			<mediaType>miximage, marquee, screenshot, titlescreen, cover, backcover, 3dbox, physicalmedia, fanart</mediaType>
			<useVariant>Basic</useVariant>
		</override>
	</variant>

	<variant name="Basic">
		<label>Basic</label>
		<selectable>false</selectable>
	</variant>

	<transitions name="transitions">
		<label>transitions</label>
		<selectable>false</selectable>
		<systemToSystem>instant</systemToSystem>
		<systemToGamelist>instant</systemToGamelist>
		<gamelistToGamelist>instant</gamelistToGamelist>
		<gamelistToSystem>instant</gamelistToSystem>
		<startupToSystem>instant</startupToSystem>
		<startupToGamelist>instant</startupToGamelist>
	</transitions>

	<suppressTransitionProfiles>
		<entry>builtin-instant</entry>
		<entry>builtin-slide</entry>
		<entry>builtin-fade</entry>
	</suppressTransitionProfiles>

</themeCapabilities>
